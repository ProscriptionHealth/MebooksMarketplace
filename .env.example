# Database Configuration
DATABASE_URL=postgresql://vebooks:vebooks_password@localhost:5432/vebooks_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Google Cloud Platform
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=./credentials/google-cloud-key.json
GCP_STORAGE_BUCKET=vebooks-content-storage
GCP_VERTEX_AI_REGION=us-central1

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_PLUS=price_plus_monthly
STRIPE_PRICE_ID_FAMILY=price_family_monthly
STRIPE_PRICE_ID_EDUCATOR=price_educator_monthly

# Email Configuration
EMAIL_FROM=noreply@vebooks.ai
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Application Configuration
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:3001

# File Upload Configuration
UPLOAD_MAX_SIZE=104857600  # 100MB in bytes
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mp3,audio/wav,application/pdf

# Content Moderation
PERSPECTIVE_API_KEY=your-perspective-api-key
CONTENT_MODERATION_THRESHOLD=0.7

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW=15  # minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_AUTH=10  # for auth endpoints

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Feature Flags
FEATURE_VIDEO_GENERATION=true
FEATURE_VOICE_SYNTHESIS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_COPPA_MODE=true

# AI Content Generation
AI_CONTENT_TIMEOUT=300000  # 5 minutes in milliseconds
AI_MAX_CONCURRENT_GENERATIONS=5

# Security
BCRYPT_ROUNDS=12
CSRF_SECRET=your-csrf-secret

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Development Only
SEED_DATABASE=false
MOCK_PAYMENTS=true
MOCK_EMAIL=true